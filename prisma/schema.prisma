generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  lastName  String
  firstName String
  password  String
  phone     String    @unique
  email     String    @unique
  verified  Boolean   @default(false)
  contacts  Contact[]
  Location  Location?
}

model Location {
  id     String   @id @default(uuid())
  x      Decimal
  y      Decimal
  userID String   @unique
  User   User     @relation(fields: [userID], references: [id])
  date   DateTime @default(now())
}

model Contact {
  id             String @id @default(uuid())
  name           String
  phone          String
  contactOwnerID String
  contactOwner   User   @relation(references: [id], fields: [contactOwnerID])
}
